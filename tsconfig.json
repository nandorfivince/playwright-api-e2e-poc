{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@support/*": ["./support/*"],
      "@schemas/*": ["./schemas/*"]
    }
  },
  "include": ["tests/**/*.ts", "support/**/*.ts", "schemas/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}
